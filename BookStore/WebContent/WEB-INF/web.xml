<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>BookStore</display-name>
  <welcome-file-list>
    <welcome-file>BookList</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>BookList</servlet-name>
    <servlet-class>controller.BookList</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BookList</servlet-name>
    <url-pattern>/book.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>GenreFilter</servlet-name>
    <servlet-class>controller.GenreFilter</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GenreFilter</servlet-name>
    <url-pattern>/genre.do</url-pattern>
  </servlet-mapping>
</web-app>